<h1>Metric Values</h1>
<% @users.each do |user| %>
  <%= link_to user[:metric_value] ? metric_value_path(@metric_id, user[:metric_value][:id]) : new_metric_value_path(owner: { kind: 'user', href: user[:href] }) do %>
    <div>
      <%= "#{user[:first_name]} #{user[:last_name]}" %>
      - Value:
      <%= user[:metric_value] ? user[:metric_value][:value] : 0 %>
    </div>
  <% end %>
<% end %>
